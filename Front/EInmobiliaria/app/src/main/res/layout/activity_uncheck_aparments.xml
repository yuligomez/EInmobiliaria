<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    tools:context=".ui.UncheckAparments">

    <TextView
        android:id="@+id/textSendNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apartment_to_check"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textAparmentsUncheked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_notifications"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:textSize="16dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerUnchekedAparments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingButtonNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_notify" />





</androidx.coordinatorlayout.widget.CoordinatorLayout>