<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AddRent">

    <TextView
        android:id="@+id/labelAddRent"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        android:text="@string/add_rent"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/nameAparmentRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="Nombre apartamento"/>

    <EditText
        android:id="@+id/etDateInitRent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:hint="Seleccione fecha de inicio"
        android:clickable="false"
        android:focusable="false"/>

    <EditText
        android:id="@+id/etDateFinishRent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:hint="Seleccione fecha de finalizaciÃ³n"
        android:clickable="false"
        android:focusable="false"/>
    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center"
        android:text="@string/add" />

</LinearLayout>